<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"/>

            <RelativeLayout
                android:background="@color/white"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="物品类型（填写／选择类型）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText

                    android:id="@+id/text_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:gravity="right"
                    android:minWidth="50dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
            </RelativeLayout>
            <com.cxd.khd.view.widget.RadioGroupEx
                android:orientation="horizontal"
                android:id="@+id/group_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white">

            </com.cxd.khd.view.widget.RadioGroupEx>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"/>

            <RelativeLayout
                android:background="@color/white"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="物品质量（填写／选择类型）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/text_weight"
                        style="@style/defaultTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"

                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:minWidth="50dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />
                    <TextView
                        style="@style/defaultTextStyle"
                        android:textColor="@color/colorPrimary"
                        android:text="KG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>
            <com.cxd.khd.view.widget.RadioGroupEx
                android:id="@+id/group_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white">

            </com.cxd.khd.view.widget.RadioGroupEx>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"/>

            <RelativeLayout
                android:background="@color/white"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="物品体积（填写／选择类型）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <EditText
                        android:id="@+id/text_volume"
                        style="@style/defaultTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"

                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:minWidth="50dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />
                    <TextView
                        style="@style/defaultTextStyle"
                        android:textColor="@color/colorPrimary"
                        android:text="m"
                        android:layout_width="wrap_content"
                        android:id="@+id/text_volume_symbol"
                        android:textSize="10sp"
                        android:layout_height="16dp"
                        android:gravity="bottom" />
                </LinearLayout>

            </RelativeLayout>
            <com.cxd.khd.view.widget.RadioGroupEx
                android:id="@+id/group_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white">

            </com.cxd.khd.view.widget.RadioGroupEx>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"/>
            <RelativeLayout
                android:background="@color/white"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    style="@style/defaultTextStyle"
                    android:text="物品声明价值"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


                <EditText
                    android:id="@+id/input_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@null"

                    android:hint="点击输入"
                    android:inputType="numberDecimal"
                    android:minWidth="50dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="15sp" />
                <TextView
                    android:layout_toLeftOf="@id/input_money"
                    android:textColor="@color/colorPrimary"
                    android:text="¥"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>