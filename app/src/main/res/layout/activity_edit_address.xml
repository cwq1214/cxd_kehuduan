<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:divider="@drawable/divider"
        android:showDividers="beginning|end|middle"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="姓名："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/defaultTextStyle" />
            <EditText
                android:id="@+id/input_name"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:padding="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="联系方式："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/defaultTextStyle" />
            <EditText
                android:id="@+id/input_contract"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layout_selAddress"
            android:padding="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="地址："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/defaultTextStyle" />
                <EditText
                    android:text="123"
                    android:layout_weight="1"
                    android:background="@null"
                    android:id="@+id/text_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:elegantTextHeight="true"
                    android:layout_marginRight="16dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/sjorderdetails_icon_locate_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_getLocation" />
        </RelativeLayout>

        <RelativeLayout
            android:padding="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_setdefault">

            <TextView
                style="@style/defaultTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="设为寄件人默认地址" />
            <CheckBox
                android:button="@null"
                android:background="@drawable/sel_switch"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:id="@+id/cb_setDefault" />
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_blue_solid_angle"
        android:textColor="@color/white"
        android:text="保存地址"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/btn_done" />
</RelativeLayout>