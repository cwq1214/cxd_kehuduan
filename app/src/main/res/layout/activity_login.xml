<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"/>
    <EditText
        android:background="#FFFFFF"
        android:paddingLeft="22dp"
        android:hint="请输入你的手机号码"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/input_phoneNumber" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:background="#FFFFFF"
            android:paddingLeft="22dp"
            android:hint="请输入你的短信验证码"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:id="@+id/input_code" />

        <TextView
            android:background="@drawable/btn_blue_solid_angle"
            android:textColor="#FFFFFF"
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginRight="22dp"
            android:id="@+id/btn_getCode" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_blue_solid_angle"
        android:textSize="18sp"
        style="@style/defaultBtn"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:id="@+id/btn_login" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:background="@drawable/btn_blue_storke_transparent_solid_angle"
        android:textSize="18sp"
        style="@style/defaultBtn"
        android:text="未注册？马上点击进行注册！"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="15dp"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_blue_storke_transparent_solid_oval"
            android:textColor="@color/colorPrimary"
            android:text="大客户入口>>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:paddingRight="32dp"
            android:paddingLeft="32dp"
            android:id="@+id/btn_bkLogin" />
    </RelativeLayout>
</LinearLayout>