<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/bg_rob_order_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/msg"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="您有新的派件业务订单，距离您3公里"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="17dp"
            android:layout_below="@id/msg"
            android:id="@+id/img"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/orderpush_pic_paijian_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="11dp"
            android:layout_below="@id/img"
            android:id="@+id/text1"
            android:textColor="#99FFFFFF"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:text="请尽快抢单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_below="@id/text1"
            android:id="@+id/text_deadline"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="15:00后失效"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:background="@drawable/bg_rob_order_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">


        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/white"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:background="@drawable/shape_oval_gray"
            android:text="不抢"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancel" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:textColor="@color/white"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:background="@drawable/shape_oval_blue"
            android:text="抢单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_done" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>